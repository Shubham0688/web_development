body{
  display:flex;
  justify-content:center;
  align-items:center;
  height:100vh;
  background:#111;
}

.loader span{
  width:15px;
  height:15px;
  margin:5px;
  background:#0ff;
  border-radius:50%;
  display:inline-block;
  animation:think 1.4s infinite both;
}

.loader span:nth-child(2){animation-delay:.2s;}
.loader span:nth-child(3){animation-delay:.4s;}

@keyframes think{
  0%{opacity:.3;}
  50%{opacity:1;}
  100%{opacity:.3;}
}
