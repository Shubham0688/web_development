* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

body {
    background: #f4f6f8;
    color: #333;
}

/* NAVBAR */
header {
    background: #0a66c2;
    color: white;
    padding: 15px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header nav a {
    color: white;
    margin-left: 20px;
    text-decoration: none;
    font-weight: bold;
}

/* HERO */
.hero {
    background: white;
    padding: 60px;
    text-align: center;
}

.hero h2 {
    font-size: 32px;
    margin-bottom: 10px;
}

/* SECTIONS */
.section {
    padding: 40px;
    background: white;
    margin: 20px auto;
    width: 80%;
    border-radius: 10px;
}

.section h2 {
    margin-bottom: 20px;
    color: #0a66c2;
}

/* SKILLS */
.skills span {
    display: inline-block;
    background: #e0eaff;
    padding: 8px 15px;
    margin: 5px;
    border-radius: 20px;
}

/* PROJECTS */
.project {
    background: #f4f6f8;
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 8px;
}

/* FOOTER */
footer {
    text-align: center;
    padding: 15px;
    background: #0a66c2;
    color: white;
    margin-top: 20px;
}
