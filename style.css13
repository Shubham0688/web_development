body{
  background:#000;
  display:flex;
  justify-content:center;
  align-items:center;
  height:100vh;
}

.scanner{
  width:300px;
  height:200px;
  border:2px solid #0f0;
  position:relative;
  overflow:hidden;
}

.scanner::before{
  content:"";
  position:absolute;
  width:100%;
  height:5px;
  background:#0f0;
  animation:scan 2s infinite;
}

@keyframes scan{
  0%{top:0;}
  100%{top:100%;}
}
