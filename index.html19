* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

body {
    background: #f0f2f5;
}

/* HEADER */
header {
    background: #1877f2;
    padding: 10px 20px;
    display: flex;
    align-items: center;
}

header h1 {
    color: white;
    margin-right: 20px;
    font-size: 28px;
}

header input {
    padding: 6px;
    width: 250px;
    border-radius: 20px;
    border: none;
}

/* LAYOUT */
.container {
    display: flex;
    margin-top: 20px;
}

/* SIDEBARS */
aside {
    width: 20%;
    padding: 15px;
}

.left p,
.right p {
    background: white;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
}

/* FEED */
main {
    width: 60%;
    padding: 0 20px;
}

.post-box {
    background: white;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
}

.post-box input {
    width: 100%;
    padding: 10px;
    border-radius: 20px;
    border: 1px solid #ccc;
}

.actions {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
    color: #65676b;
}

/* POST */
.post {
    background: white;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
}

.post h3 {
    margin-bottom: 8px;
}

.post-actions {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
    color: #65676b;
    border-top: 1px solid #ddd;
    padding-top: 8px;
}
